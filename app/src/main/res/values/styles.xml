<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:typeface">serif</item>
    </style>
    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">@dimen/sp_12</item></style>

    <style name="edittextstyle" parent="Base.Widget.AppCompat.EditText" >
        <!--<item name="android:background" >@drawable/blue_r_cd_white</item>-->
        <item name="android:padding">@dimen/dp_8</item>
        <item name="android:layout_marginStart">@dimen/dp_20</item>
        <item name="android:layout_marginEnd">@dimen/dp_20</item>
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:drawablePadding">@dimen/dp_5</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="ButtonStyle" parent="Base.TextAppearance.AppCompat.Widget.Button" >
        <item name="android:background" >@drawable/yellow_button_back</item>
        <item name="android:padding">@dimen/dp_8</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="ButtonfillStyle" parent="Base.TextAppearance.AppCompat.Widget.Button" >
        <item name="android:background" >@drawable/yellowfilled_button_back</item>
        <item name="android:padding">@dimen/dp_8</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">@color/white</item>
    </style>

