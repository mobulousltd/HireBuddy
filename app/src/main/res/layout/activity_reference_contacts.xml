<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_reference_contacts"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color_profile"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:textColor="@color/white"
        android:background="@color/header"
        android:textSize="@dimen/sp_20"
        android:text="@string/rc"
        android:gravity="center"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <TextView
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:textSize="@dimen/sp_17"
        android:text="@string/pecd"
        android:gravity="center"/>
    <TextView
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="@string/contact1"
        android:textSize="@dimen/sp_16"
        android:background="@color/grey"
        android:paddingStart="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_5"
        android:paddingTop="@dimen/dp_5"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginStart="@dimen/dp_20"
    android:layout_marginEnd="@dimen/dp_20">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/yellow"
        >
        <EditText
            android:id="@+id/et_name_rc"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:inputType="textCapWords"
            android:singleLine="true"
            android:hint="@string/entername"
            android:background="@android:color/transparent"
            android:digits="@string/a_z"
            android:imeOptions="actionNext"
            />
    </android.support.design.widget.TextInputLayout>
    <View
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/grey"/>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/yellow"
        android:layout_marginTop="@dimen/dp_10"
        >
        <EditText
            android:id="@+id/et_phone_rc"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:hint="@string/enterphone"
            android:inputType="phone"
            android:background="@android:color/transparent"
            android:maxLength="10"
            android:digits="@string/zero_9"
            android:imeOptions="actionDone"
            android:singleLine="true"
            />
    </android.support.design.widget.TextInputLayout>
    <View
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/grey"/>


    <TextView
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/yellow"
        android:textSize="@dimen/sp_12"
        android:text="@string/idproof"/>
    <TextView
        android:id="@+id/txt_contoimage"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/camera"
        android:drawablePadding="@dimen/dp_10"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16"
        android:text="@string/nfs"/>
    <View
        android:layout_marginTop="@dimen/dp_5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/grey"
        />
</LinearLayout>
            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/contact2"
                android:textSize="@dimen/sp_16"
                android:background="@color/grey"
                android:paddingStart="@dimen/dp_20"
                android:paddingBottom="@dimen/dp_5"
                android:paddingTop="@dimen/dp_5"
                />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/yellow"
            >
            <EditText
                android:id="@+id/et_name_rc2"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/entername"
                android:textSize="@dimen/sp_15"
                android:singleLine="true"
                android:inputType="textCapWords"
                android:background="@android:color/transparent"
                android:digits="@string/a_z"
                android:imeOptions="actionNext"
                />
        </android.support.design.widget.TextInputLayout>
        <View
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/grey"/>


        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/yellow"
            >
            <EditText
                android:id="@+id/et_phone_rc2"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_15"
                android:inputType="phone"
                android:singleLine="true"
                android:background="@android:color/transparent"
                android:maxLength="10"
                android:hint="@string/enterphone"
                android:digits="@string/zero_9"
                android:imeOptions="actionDone"
                />
        </android.support.design.widget.TextInputLayout>
        <View
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/grey"/>

        <TextView
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/yellow"
            android:textSize="@dimen/sp_12"
            android:text="@string/idproof"/>
        <TextView
            android:id="@+id/txt_conttimage"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/camera"
            android:drawablePadding="@dimen/dp_10"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:text="@string/nfs"/>
        <View
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/grey"
            />
    </LinearLayout>

    <Button
        style="@style/ButtonfillStyle"
        android:text="@string/next"
        android:layout_marginTop="@dimen/dp_30"
        android:textColor="@color/black"
        android:paddingStart="@dimen/dp_80"
        android:paddingEnd="@dimen/dp_80"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:onClick="finish"
        android:background="@drawable/fill_button_pressed_selector"
        />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
